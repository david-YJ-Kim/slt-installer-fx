<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<!-- 헤더가 화면 전체 너비를 차지하도록 AnchorPane 속성 수정 -->
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tsh.slt.installer.component.HeaderComponent"
            AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

    <HBox fx:id="headerContainer" alignment="CENTER_LEFT" spacing="10.0"
          prefHeight="30.0" maxHeight="30.0"
          AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <!-- 뒤로가기 버튼 - 크기 명시 -->
        <ImageView fx:id="backButton" fitWidth="20.0" fitHeight="20.0" pickOnBounds="true" preserveRatio="true"
                   style="-fx-cursor: hand;"/>

        <!-- 여백을 위한 Region -->
        <Region HBox.hgrow="ALWAYS"/>

        <!-- 닫기 버튼 - 크기 명시 -->
        <ImageView fx:id="closeButton" fitWidth="20.0" fitHeight="20.0" pickOnBounds="true" preserveRatio="true"
                   style="-fx-cursor: hand;"/>

        <padding>
            <Insets top="5" right="10" bottom="5" left="10"/>
        </padding>
    </HBox>
</AnchorPane>