<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="rootPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tsh.slt.installer.controller.LoginController"
            prefHeight="500.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">

        <Label fx:id="titleLabel" text="Welcome, SLT" />
        <Label fx:id="subtitleLabel" text="Let me help your work" />

        <TextField fx:id="emailField" promptText="yj.david.kim@gmail.com" />
        <PasswordField fx:id="passwordField" promptText="••••••••••••" />

        <HBox alignment="CENTER" spacing="5.0">
            <Label fx:id="signupInfoLabel" text="If you don't have account yet" />
            <Hyperlink fx:id="signInLink" text="Sign-in" onAction="#handleSignInLink" />
        </HBox>

        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="loginButton" text="Log-In" onAction="#handleLogin" />
            <Button fx:id="closeButton" text="Cancel" onAction="#handleClose" />
        </HBox>
    </VBox>
</AnchorPane>