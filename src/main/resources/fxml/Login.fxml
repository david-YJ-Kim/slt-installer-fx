<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="rootPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tsh.slt.installer.controller.LoginController"
            prefHeight="500.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">

        <Label text="Welcome, SLT" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <Label text="Let me help your work" style="-fx-font-size: 18px;" />

        <TextField fx:id="emailField" promptText="yj.david.kim@gmail.com" maxWidth="400" />
        <PasswordField fx:id="passwordField" promptText="••••••••••••" maxWidth="400" />

        <HBox alignment="CENTER" spacing="5.0">
            <Label text="If you don't have account yet" />
            <Hyperlink fx:id="signInLink" text="Sign-in" onAction="#handleSignInLink" />
        </HBox>

        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="loginButton" text="Log-In"
                    style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-min-width: 100px;"
                    onAction="#handleLogin" />
            <!-- 닫기 버튼을 로그인 버튼 옆에 배치 -->
            <Button fx:id="closeButton" text="Cancel"
                    style="-fx-min-width: 100px;"
                    onAction="#handleClose" />
        </HBox>
    </VBox>
</AnchorPane>